<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Add" />

    <EditText
        android:id="@+id/etAndroidVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="Enter Android Version"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etAndroidCodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Enter Android Code Name"
        android:inputType="textEmailAddress" />

    <TableLayout
        android:id="@+id/table_main"
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Version"
                android:textColor="#232323"
                android:textSize="24sp" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Code Name"
                android:textColor="#232323"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Android 9.0"
                android:textSize="18sp" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pie"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Android 8.0"
                android:textSize="18sp" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Dreo"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>


</RelativeLayout>